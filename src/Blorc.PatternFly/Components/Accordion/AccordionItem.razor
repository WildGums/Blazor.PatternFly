@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web

@inherits BlorcComponentBase

<dt>
    <h3>
        <button class="pf-c-accordion__toggle @GetIsExpandedClass()" aria-expanded="false" @onclick="OnItemClick">
            <span class="pf-c-accordion__toggle-text">
                @Title
            </span>
            <i class="fas fa-angle-right pf-c-accordion__toggle-icon" aria-hidden="true"></i>
        </button>
    </h3>
</dt>
<dd class="pf-c-accordion__expanded-content @GetIsExpandedClass()" hidden="@(!IsSelected)">
    @if (Content != null)
    {
        <div class="pf-c-accordion__expanded-content-body">
            @Content
        </div>
    }
</dd>