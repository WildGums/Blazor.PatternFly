@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web

@inherits Blorc.PatternFly.Components.AlertGroup.AlertGroupContainerComponent
   
<ul class="pf-c-alert-group pf-m-toast @Class">
    @if (Items != null)
    {
        foreach (var item in Items)
        {
            <AlertGroup Description="@item.Description"
                        AlertType="@item.AlertType"
                        ShowCloseIconButton="@item.ShowCloseIcon"></AlertGroup>
        }
    }
</ul>