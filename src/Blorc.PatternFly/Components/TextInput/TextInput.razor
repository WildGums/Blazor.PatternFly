@using Blorc.PatternFly.Core
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web

@inherits BlorcComponentBase

@switch (UpdateMode)
{
    case UpdateMode.Continuous:
            <input aria-label="@Label" 
                   class="@Class" 
                   type="@Type" aria-invalid="@IsInvalid.ToString().ToLower()" 
                   aria-required="@IsRequired" 
                   @bind-value="Value" 
                   @bind-value:event="oninput" 
                   readonly="@IsReadOnly" 
                   disabled="@IsDisabled" @attributes="AdditionalAttributes" />
            break;
    default:
            <input aria-label="@Label" 
                   class="@Class" 
                   type="@Type" 
                   aria-invalid="@IsInvalid.ToString().ToLower()" 
                   aria-required="@IsRequired" 
                   @bind-value="Value"  
                   readonly="@IsReadOnly" 
                   disabled="@IsDisabled" @attributes="AdditionalAttributes" />
            break;
}